    <div class="container">

      <div class="row">
        <div class="col-md-1">
          &nbsp;
        </div>
        <div class="col-md-3">
          <img class="theImage" src="<%=@ebook.cover.url%>" width="100%">
        </div>
        <div class="col-md-7">
          <div class="row">
            <div class="col-md-12"> 
              <div class="book_title" style="padding-top:10px">
                   <%= @ebook.title %>
              </div>
              <div class="explain_status">
                by AndroidSchool
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-8">
            <%= form_for Subscriber.new , url: '/subscriptions/create' ,method: 'post',html: {class: 'form-group subscription_form','data-remote'=> 'true',style: 'padding-top:30px'} do |f|%>
              <div class="input-group">
                 <%= f.email_field :email , class: 'form-control', placeholder: 'Your Email'%>
                  <span class="input-group-btn">
                      <input class="btn btn-primary" type="submit" value="Subscribe"></input>
                  </span>
              </div>
            <% end %>
             <div class="subscribe_thanks" style="display:none">
              <p> Thanks!. We have emailed you the book. </p> 
              <%= render :template => 'common/ebook_links.html.erb' ,:locals => {ebook: @ebook}%> 
             </div>
            </div>
          </div>

        </div>
        <div class="col-md-1">
          &nbsp;
        </div>
      </div> 
      
       
      </div>
    </div> <!-- /container -->

    <div class="container">
      <div class="row">
        <div class="col-md-1">
          &nbsp;
        </div>
        <div class="col-md-10">
            <div class="book_desc">
              <%= @ebook.rendered_content.html_safe %> 
            </div>
        </div>
        <div class="col-md-1">
          &nbsp;
        </div>
      </div>
    </div>
